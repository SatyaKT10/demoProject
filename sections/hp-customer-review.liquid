  .review-slider .left {
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
    position: absolute;
    top: 35%;
    left: 40%;
  }
  .review-slider .slick-prev {
    position: absolute;
    display: block;   
    width:40px;
    height:40px;
    background:white;
    border:1px solid #3069B3;
    border-radius:20px;
    line-height: 0px;
    font-size: 0px;
    cursor: pointer;
    top: -27% ;
    right:98px;
    left:unset;
