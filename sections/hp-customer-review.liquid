</style>
<hr class="setion__separator">
<section data-section-id="{{ section.id }}" data-section-type="aq_review-section" id="trial-landing-review" class="trial-review-section review-slider">
  <div class="content">
    {% if section.settings.section-heading != blank %}
    <div class="review__section--header">
      <h2>{{ section.settings.section-heading }}</h2>
    </div>
    {% endif %}
    {% if section.settings.section-sub-heading != blank %}
    <div class="review__section--subHeader">
      <h2>{{ section.settings.section-sub-heading }}</h2>
    </div>
    {% endif %}
    <div class="review-content">
      <div class="content-wrapper">
        <div class="review-slider-section">
          {% for block in section.blocks %}
          {% if block.settings.review-heading != '' %}
          <div class="slider-content">
            <div class="slider-padding">
              <div class="content">
                {% if block.settings.author_img %}
                <div class="author_img">
                  <img class="lazyload" src="{{block.settings.author_img | img_url :'master'}}" data-src="{{block.settings.author_img | img_url :'master'}}" alt="Image"  />
                </div>
                {% endif %}
                <div class="author_details">
                  {% if block.settings.review-author != '' %}
                  <p class="author-text"><span style="color:#333333;font-weight: 500;"> {{block.settings.review-author}}</span></p>
                  {% endif %}
                </div>

                <div class="review__content">
                  <p>{{block.settings.review-text}}</p>
                </div>
                <div class="review_author review__author-{{block.id}}">
                  {% if block.settings.review-stars != '' %}
                  <div class="star_review" data-stars ="{{block.settings.review-stars}}">
                    {% render 'star_icon' %}
                    {% render 'star_icon' %}
                    {% render 'star_icon' %}
                    {% render 'star_icon' %}
                    {% render 'star_icon' %}
                    <script>
                      dataStars = {{block.settings.review-stars}};
                      stars =  $('.review__author-{{block.id}} .star_review svg');
                                 stars.each(function(i){
                        j = i+1;
                        if(j > dataStars){
                          $(this).addClass("inactive");
                        }
                      })
                    </script>

                  </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>


<script>
  $(function(){
    $('.review-slider-section').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3,
      autoplay: false,
      arrows : true,
      dots : false,
      infinite: false,
      prevArrow:'<div class="slick-prev"><i class="arrow left"></i></div>',
      nextArrow:'<div class="slick-next"><i class="arrow right"></i></div>',
      responsive: [
        {
            breakpoint: 1200,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 2,
              arrows:true,
              dots:false,
              autoplay: false,
              autoplaySpeed: 2000
            }
          },
        {
          breakpoint: 749,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: true,
            dots: false
          }
        }

      ]
    });
    $('.review-slider-section').slick('setPosition');
  })
</script>

