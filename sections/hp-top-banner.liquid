<style>
  .video-banner__section .video_content{
    position:relative;
  }
  .video-banner__section .video_content .video_desktop{
    width:100%;    
  }
  .video-banner__section .video_content .video_conetnt_text{
    max-width:658px;
    position:absolute;
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .video-banner__section .video_content  .conetnt_text {
    margin-bottom: 80px;
  }
   .video-banner__section .video_content  .conetnt_text .video_conetnt_text a{
    text-align:center;
  }
  .video-banner__section .video_content .video_conetnt_text .conetnt_text p {
    font-family: 'Quattrocento';
    font-style: normal;
    font-weight: 700;
    font-size: 48px;
    line-height: 170.3%;
    text-align: center;
    color: #FFFFFF;
    padding: 0 15px;
  }
  .register_buttonn{
    background: #4DB8C5;
    border-radius: 5px;
    width: 364px;
    padding: 20px;
    margin: auto;
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 149.3%;
    text-align: center;
    color: #FFFFFF;

  } 
  .btn_vertualTry{
    display:none;
  }
  @media (min-width: 749px) and (max-width: 949px){
    .video-banner__section .video_content .video_conetnt_text .conetnt_text p {
      font-size: 32px;
    }
    .video-banner__section .video_content .video_conetnt_text{
      top: 50%;
      transform: translate(-50%, -50%);
    }
  }
  @media(max-width:749px){
    .video-banner__section .video_content{
      background: #26467D;
    }
    .video-banner__section .video_content .video_conetnt_text .conetnt_text p {
      font-size: 32px;
    }
    .btn_vertualTry{
      display:block;
      background:#26467D;
    }
    .veritual_buttonn {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      color: white;
      padding:14px 0 16px 0;
    }
    .veritual_buttonn span{
      font-family: 'Poppins';
      font-style: normal;
      font-weight: 600;
      font-size: 16px;
      line-height: 149.3%;
      color: #FFFFFF;

    }
    .video-banner__section .video_content .video_conetnt_text{
      width:90%;
      max-width:unset;
    }
  }
</style>
