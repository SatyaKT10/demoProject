<section id="category_subscribe__refill--section"
  data-section-type="product-image-text"
  data-section-id="{{ section.id }}"
  data-section-data>
  <div class="page-width">
        <div class="subscribe__refill">
          {% assign section_heading = section.settings.heading %}
          {% assign section_subheading = section.settings.subheading %}
          <div class="subscribe__refill--content">
          {% if section_heading != blank %}
            <h2 class="subscribe__refill__heading">{{ section_heading }}</h2>
            <center><hr class="about_hr"></center>
          {% endif %}
          {% if section_subheading != blank %}
            <p class="subscribe__refill__subheading">{{ section_subheading }}</p>
          {% endif %}

          <div class="subscribe__refill__image__content">
            {% for block in section.blocks %}
                <div class="subscribe__refill__image__content--wrapper">            
                  {% assign image = block.settings.image %}
                  {% assign text = block.settings.text %}
                      <div class="subscribe__refill__image__content--image">            
                        <img class="image" src="{{image | img_url: 'master'}}">
                        {% if text != blank %}
                          <p class="subscribe__refill--text">{{ text }}</p>
                        {% endif %}
                      </div>
                </div>
            {% endfor %}
            {% assign link1 = section.settings.link1 %}
            {% assign link2 = section.settings.link2 %}
          </div>
          <div class="refill-btn">
              {% if link1 != blank %}
              <a href="{{ link1 }}" class="subscribe__refill--btn1"><span><img src="{{ 'Group_19.png' | asset_img_url }}" /></span>{{section.settings.link-text1}} </a>
              {% endif %}
              {% if link2 != blank %}
              <a href="{{ link2 }}" class="subscribe__refill--btn2">{{section.settings.link-text2}} </a>
              {% endif %}
            </div>
        </div>
      </div>
    </div>
</section>
<style>
  .subscribe__refill {
    background: url({{ section.settings.bgimage | img_url: 'master' }});
    background-size: 100% 100%;
    background-repeat: no-repeat;
    margin-left: -7em;
  }
  @media (max-width: 1300px) {
    .subscribe__refill {
      background: none;
      border: 12px solid #fec6c0;
      margin-left: 0em;
    }
  }
  
</style> 

{% schema %}
{
  "name": "Subscribe Refill Section",
  "settings": [
      {
        "type": "image_picker",
        "id": "bgimage",
        "label": "Background Image"
      },    
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
	  {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
      },
      {
        "type" :    "header",
        "content" : "Bottom link Botton"
      },
	  {
        "type": "text",
        "id": "link-text1",
        "label": "First Botton Text"
      },
	  {
        "type": "url",
        "id": "link1",
        "label": "First Botton Link"
      },
      {
        "type": "text",
        "id": "link-text2",
        "label": "Second Botton Text"
      },
      {
        "type": "url",
        "id": "link2",
        "label": "Second Botton Link"
      }
	
  ],

  "blocks": [
    {
      "name": "subscribe-refill",
      "type": "product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}