<section id="usp_section">
  <div class="page-width">
    <div class="usp_section_wrap">
        {% for block in section.blocks %}
          {% assign image = block.settings.pimage %}
          {% assign para = block.settings.tpara %}
          <div class="usp_section_wrap_imgtxt">
            <div class="usp_section_wrap_img">
              {% if image != blank%}
              <img src="{{ image | img_url: "master" }}"/>
              {% endif %}
      		</div>
            <div class="usp_section_wrap_txt">
              {% if para != blank%}
              <p>{{para}}</p>
              {% endif %}
          	</div>
      	</div>
      {% endfor %}
    </div>
  </div>
</section>


  {% schema %}
    {
      "name": "USP Block",
      "blocks": [
        {
          "type": "SellerImage",
          "name": "Blocks",
          "settings": [
              {
                "type":"image_picker",
                "id":"pimage",
                "label":"Image"
              },
              {
                "type":"text",
                "id":"tpara",
                "label":"Heading"
              }
           ],
			"limit": 4
        }
      ],

      "presets": [
        {
          "category": "Block",
          "name": "USP Block",
          "blocks": []
          }
      ]
    }
  {% endschema %}
  
