{% assign appInfo_slider = section.blocks | where: 'type', 'appInfo_slider' %}
<section data-section-id="{{ section.id }}" data-section-type="aq_app-section" class="aq-app__section" id="appSection">
  
  {% if section.settings.section-heading != blank %}
  <div class="app__section--header">
    <h2>{{ section.settings.section-heading }}</h2>
  </div>
  {% endif %}
  {% if section.settings.section-sub-heading != blank %}
  <div class="app__section--subHeader">
    <h2>{{ section.settings.section-sub-heading }}</h2>
  </div>
  {% endif %}
  
  <div class="horizontal_line"></div>
  
  <div class="app_cards_wrapper">    
    {% for block in appInfo_slider  %}
    <div class="appInfo_cards">
      <div class="appInfo_cards_flex">
      {% if block.settings.screen_image != ''%}
      <div class="appInfo_image">
        <img class="lazyload" src="{{block.settings.screen_image | img_url :'master'}}" data-src="{{block.settings.screen_image | img_url :'master'}}" alt="Image"  />
      </div>
      {% endif %}
      <div class="appButton">
        {% if block.settings.appInfo_text != blank %}
        <div class="appInfo_text">{{ block.settings.appInfo_text }}</div>
        {% endif %}
        <a class="app_desktop" href="https://cdn.shopify.com/s/files/1/0291/0417/7212/files/Aqualens_B2B.apk?v=1649932753"><p>Download</p></a>
      </div>
      </div>
    </div>
    {% endfor %}  
  </div>  
  <a class="app_mobile" href="https://cdn.shopify.com/s/files/1/0291/0417/7212/files/Aqualens_B2B.apk?v=1649932753"><p>Download</p></a>

</section>
<script>
  $(".app_cards_wrapper").slick({
    dots:true,
    infinite: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows:true,
    autoplay: false,
    autoplaySpeed: 2000,
    prevArrow:'<div class="slick-prev"><i class="arrow left"></i></div>',
    nextArrow:'<div class="slick-next"><i class="arrow right"></i></div>',
  });
</script>

{% schema %}
  {
    "name": "Aqualens Dowanload App",
    "settings": [
    	{
          "type": "text",
          "id": "section-heading",
          "label": "Section Heading",
          "default": "Download Our App"
        },
		{
          "type": "text",
          "id": "section-sub-heading",
          "label": "Section Sub Heading",
          "default": "Faster and smarter way of staying connected"
        }
	],
    "blocks": [
        {
          "name": "Aqualens App",
          "type": "appInfo_slider",
		  "limit":3,
          "settings": [
			{
              "type": "image_picker",
              "id": "screen_image",
              "label": "Image"
            },
            {
              "type": "text",
              "id": "appInfo_text",
              "label": "Text",
              "default": "1"
            }
          ]
        }
      ],

    "presets":[ 
            { 
               "name":{ 
                  "en":"Aqualens Dowanload App"
               },
               "category":{ 
                  "en":"Homepage"
               }
            }
       ]
  }
{% endschema %}
