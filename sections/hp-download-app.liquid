<style>
  .aq-app__section .slick-prev:before{
    content:"";
  }
  .aq-app__section .slick-next:before{
    content:"";
  }
  .aq-app__section .slick-next:focus{
    display:none;
  }
  .aq-app__section .slick-prev:focus{
    display:none;
  }
  .aq-app__section .arrow {
    border: solid #3069B3;
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 4px;
  }
  .aq-app__section .right {
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    position: absolute;
    top: 35%;
    right: 42%;
  }

  .aq-app__section .left {
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
    position: absolute;
    top: 35%;
    left: 40%;
  }
  .aq-app__section .slick-prev{
    left:-25px;
    text-align: right;
    background:red;
  }
  .aq-app__section .slick-next{
    right:0px;
    text-align: left;
  }
  .aq-app__section .slick-prev {
    position: absolute;
    display: block;   
    width:40px;
    height:40px;
    background:white;
    border:1px solid #3069B3;
    border-radius:20px;
    line-height: 0px;
    font-size: 0px;
    cursor: pointer;
    top: 55%;
    left:70px;
    -webkit-transform: translate(0, -50%);
    -ms-transform: translate(0, -50%);
    transform: translate(0, -50%);
    padding: 0;
    z-index: 700;
  }
  .aq-app__section .slick-next {
    position: absolute;
    display: block;   
    width:40px;
    height:40px;
    background:white;
    border:1px solid #3069B3;
    border-radius:20px;
    line-height: 0px;
    font-size: 0px;
    cursor: pointer;
    top: 55%;
    right:70px;
    -webkit-transform: translate(0, -50%);
    -ms-transform: translate(0, -50%);
    transform: translate(0, -50%);
    padding: 0;
    z-index: 700;
  }
  .aq-app__section .slick-slider {
    margin-bottom: 0;
  }
  .aq-app__section .slick-active button{
    outline:none;
  }  
  
  
  
  
  
  
