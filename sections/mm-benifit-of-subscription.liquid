<section id="about_benifit-subscribe--section"
  data-section-type="product-image-text"
  data-section-id="{{ section.id }}"
  data-section-data>
<div class="about_container">  
  <div class="page-width"> 
    <div class="about_subscribe--container">
        <div class="about_subscribe__refill">
          {% assign section_heading = section.settings.heading %}
          <div class="about_subscribe--content">
          {% if section_heading != blank %}
            <h2 class="about_subscribe__heading">{{ section_heading }}</h2>
            <center><hr class="about_hr"></center>
          {% endif %}
          <div class="about_subscribe__image__content">
            {% for block in section.blocks %}
                <div class="about_subscribe__image__content--wrapper">            
                  {% assign blockimage = block.settings.blockimage %}
                  {% assign headingtext = block.settings.headingtext %}
                  {% assign contenttext = block.settings.contenttext %}
                      <div class="about_subscribe__image__content--image">            
                        <img class="about_image" src="{{blockimage | img_url: 'master'}}">
                        {% if headingtext != blank %}
                          <p class="about_subscribe--headtext">{{ headingtext }}</p>
                        {% endif %}
                        {% if contenttext != blank %}
                          <div class="about_subscribe--text">{{ contenttext }}</div>
                        {% endif %}
                      </div>
                </div>
            {% endfor %}
            
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
</section>

{% schema %}
{
  "name": "Benifit of Subscription",
  "settings": [    
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }	
  ],

  "blocks": [
    {
      "name": "subscribe-refill",
      "type": "product",
      "settings": [
        {
          "type": "image_picker",
          "id": "blockimage",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "headingtext",
          "label": "Heading"
        },
		{
          "type": "richtext",
          "id": "contenttext",
          "label": "Content Text"
        }
      ]
    }
  ]
}
{% endschema %}