.popup-wrap{
  position: fixed;
  z-index: 999;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.46);
  .pop_container{
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    .closePopWrap{
      position: absolute;
      top: -15px;
      right: -15px;
      background: #4eb9c5;
      color: #fff;
      width: 30px;
      height: 30px;
      text-align: center;
      line-height: 30px;
      border-radius: 1000px;
      cursor: pointer;
      @media(max-width: 767px){
        top: -20px;
        right: 0px;
      }
    }
    height: 100%;
    width: 100%;
    .pop_content{
      width: 500px;
      padding: 20px;
      background: #fbfbfb;
      position: relative;
      @media(max-width: 767px){
        width: 100%;
        padding: 20px 10px;
      }
      .haedingBlnc{
        display: flex;
        flex-wrap: nowrap;
        background: #4eb9c5;
        margin-bottom: 10px;
        align-items: center;
        justify-content: space-between;
        padding: 7px 10px;
        font-weight: bold;
        color: #fff;
        text-transform: uppercase;
        font-size: 15px;
      }
      .haeding{
        cursor: pointer;
        background: #ddd;
        border-bottom: 1px solid #f9f9f9;
        padding: 7px 10px;
        text-align: left;
        font-size: 15px;
        color: #003e52;
        text-transform: uppercase;
        margin: 0;
        position: relative;
        font-weight: bold;
        &.active{
          &::after{
            content: '-';
          }
        }
        &::after{
          content: '+';
          position: absolute;
          right: 7px;
          font-size: 22px;
          top: 47%;
          transform: translateY(-50%);
        }
      }
      .contentD{
        margin-top: 5px;
        max-height: 290px;
        overflow-y: scroll;
        @media(max-width: 480px){
        max-height: 240px;
        }
      }
      .section_two{
        margin-top:10px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
        @media(max-width: 480px){
          width: 400px;
        }
      }

      td, th {
        border: 1px solid #dddddd;
        padding: 8px;
        width: 25%;
        letter-spacing: 0px;
        text-transform: capitalize;
        font-size: 14px;
        text-align: center;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
        td{
          background: initial;
        }
      }
    }
  }
}