<style>
    .a_plus_getToKnow {
        max-width: 1240px;
        margin: auto;
        margin-top: 0px;
        background: #00BAC6;
        margin-bottom: 20px;
    }

    .a_plus_getToKnow_wrapper {
        display: flex;
        padding: 75px 0px 35px 0px;
    }

    .getToKnow_text {
        flex: 0 0 40%;
        width: 40%;
        position: relative;
    }

    .getToKnow_text h2 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-family: 'Poppins' !important;
        font-style: normal;
        font-weight: 600;
        font-size: 48px;
        text-transform: capitalize;
        letter-spacing: 0;
    }

    .getToKnow_slider {
        display: flex;
        gap: 1rem;
        overflow: auto;
    }

    .getToKnow_slider::-webkit-scrollbar {
        display: none;
    }


    .a_plus_getToKnow_content {
        flex: 0 0 60%;
        width: 60%;

    }

    .a_plus_getToKnow_content_info {
        background: #FFFFFF;
        box-shadow: 0px 4px 4px rgb(0 0 0 / 25%);
        border-radius: 5px;
        width: 270px;
        flex: 0 0 40%;
    }

    .a_plus_getToKnow_content_info_img {
        /* padding: 12px; */
        position: relative;
        padding-bottom: 84%;
        width: 100%;
        background: #FFFFFF;
        border-radius: 4px;
    }

    .a_plus_getToKnow_content_info_img img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        object-fit: contain;
        padding: 8px;
    }

    .a_plus_getToKnow_content_info_text {
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 400;
        font-size: 12px;
        line-height: 18px;
        color: #000000;
        padding: 8px;
        text-align: center;
    }

    @media(max-width:749px) {
        .a_plus_getToKnow {
            margin-bottom: 81px;
        }

        .a_plus_getToKnow_content_info {
            width: 190px;
            flex: 0 0 80%;
        }

        .getToKnow_text h2 {
            width: 100%;
            padding: 0 20px;
            font-size: 25px;
        }
    }
</style>

{% if product.description contains '<!--aPlusGetToKnow-->' %}
    {% assign aPlusGetToKnow = product.description | split: '<!--aPlusGetToKnow-->'| last %}
    {% assign aGetToKnow = aPlusGetToKnow | split: '<!--aPlusGetToKnowEnd-->' | first %}
{% endif %}
<div class="a_plus_getToKnow">
    {{ aGetToKnow }}
</div>