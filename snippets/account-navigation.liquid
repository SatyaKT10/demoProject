<style>  
    .my__account {
    max-width: 270px;
    max-height: -moz-fit-content;
    max-height: fit-content;
    padding: 15px 20px;
    background: #FFFFFF;
    box-shadow: 0px 5px 10px 3px rgb(0 0 0 / 1%);
    border-radius:10px;
    box-shadow: 0 0 6px #00000029;
  }
  
  .my__profile {
    display: flex;
    align-items: center;
    column-gap: 25px;
    padding: 10px 0;
    font-family: Poppins;
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 21px;
    color: #474747;
    border-bottom:1.5px solid #009de0;
  }
  .my__image {
    height: 108px;
    width: 108px;
    position: relative;
    flex-shrink: 0;
  }
  .my__number {
    display: flex;
    align-items: center;
    column-gap: 8px;
  }
  .image-icon__edit {
    width: 35px;
    height: 35px;
    position: absolute;
    right: 0;
    bottom: 0;
  }
  .image-icon {
    width: 100%;
    height: 100%;
  }
  .image-icon img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }
  .check-tick{
    line-height: 1;
    line-height: 1;
  }
  .nav__header--wrapper {
    display: flex;
    gap: 20px;
    align-items: center;
    padding: 8px 0px;
    border-bottom: 1px solid #D8D8D8;
    font-family: Poppins;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 34px;
    color: #333333;
    color: #333333;

  }
  .my__nav .my__nav--header:last-child  .nav__header--wrapper{
    border-bottom:none;
  }
  .nav__header--wrapper svg {
    width: 30px;
    flex-shrink: 0;
  }
  .my__logout .nav__header--wrapper{
    border: none;
  }
  .nav-active{
    color: #00BAC6;
  }
  .nav__header--wrapper.nav-active svg path {
    fill: #00BAC6;
  }
  p.my__nav--heading:hover {
    color: #009de0;
  }
</style>

<!--Account Navigation For Desktop-->
