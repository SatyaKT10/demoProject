<style>
    .pdp-sticky__wrapper{
      will-change: min-height;
    }
    .pdp-sticky__inner {
      transform: translate(0,0);
      transform: translate3d(0,0,0);
      will-change: position,transform;
    }
    #product-img-slider1 {
      border: 1px solid rgba(216, 216, 216, 0.25);
      border-radius: 4px;
      padding: 2px;
      margin-bottom: 20px;
    }
  
    #product-img-slider1 .slick-track .slick-slide {
      background-color: #fff;
    }
    .pdp-big-slide {
      position: relative;
      padding-bottom: 75%;
      width: 100%!important;
      background: #FFFFFF;
      border-radius: 4px;
    }
    .pdp-big-slide img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 2px;
      border-radius: 4px;
    }
    .pdp-big-slide video{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 2px;
      border-radius: 4px;
      max-height: 460px;
      cursor: pointer;
    }
    #product-img-slider2 .slick-track {
      margin-left: -10px;
      margin-right: -10px;
    }
    #product-img-slider2 .pdp-image-slide {
      margin: 0 10px;
      border: 1px solid rgba(216, 216, 216, 0.25);
      border-radius: 4px;
    }
    .pdp-image {
      position: relative;
      padding-bottom: 100%;
      width: 100%!important;
      cursor: pointer;
      background: #FFFFFF;
      border-radius: 4px;
    }
    .pdp-image img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 2px;
    }
    #product-img-slider2 .slick-slide.slick-current {
      border: 1px solid #3069B3;
      filter: drop-shadow(0px 0px 4px rgba(48, 105, 179, 0.6));
    }
    .slick-prev,.slick-next{
      top: 50%;
      transform: translateY(-50%);
      color: transparent;
      width: 30px;
      height: 30px;
      background-size: contain;
      z-index: 99;
    }
    .slick-arrow:focus{outline:0}
    .slick-prev{
      left: 0;
      background-image: url('https://cdn.shopify.com/s/files/1/0084/6957/7794/files/back_d835f47a-3199-41db-a6da-a96527ad3421.png?v=1587708484');
    }
    .slick-next{
      right: 0;
      background-image: url('https://cdn.shopify.com/s/files/1/0084/6957/7794/files/right.png?v=1587708484');
    }
  
    @media(min-width:749px){
      #product-img-slider2.no-slider .slick-track {
        transform: translate3d(0,0,0)!important;
      }
    }
    #product-img-slider1 .slick-next:before,
    #product-img-slider1 .slick-prev:before{
      content:"";
    }
    #product-img-slider1 .slick-next:focus{
      display:none;
    }
    #product-img-slider1 .slick-prev:focus{
      display:none;
    }
  
    #product-img-slider1 .arrow {
      border: solid #3069B3;
      border-width: 0 2px 2px 0;
      display: inline-block;
      padding: 3px;
    }
    #product-img-slider1 .right {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate( -45deg );
    }
  
    #product-img-slider1 .left {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate( 135deg );
    }
    #product-img-slider1 .slick-prev {
      position: absolute;
      display: block;   
      width:40px;
      height:40px;
      background:white;
      border:1px solid #3069B3;
      border-radius:50%;
      line-height: 0px;
      font-size: 0px;
      cursor: pointer;
      top: 50%;
      left:0px;
      margin-left: 10px;
      -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
      transform: translate(0, -50%);
      padding: 0;
      z-index: 99;
    }
    #product-img-slider1 .slick-next {
      position: absolute;
      display: block;   
      width:40px;
      height:40px;
      background:white;
      border:1px solid #3069B3;
      border-radius:50%;
      line-height: 0px;
      font-size: 0px;
      cursor: pointer;
      top: 50%;
      margin-right: 10px;
      -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
      transform: translate(0, -50%);
      padding: 0;
      z-index: 99;
    }
  
    .pdp-video__popup-container{
      display: none;
      background: rgba(51, 51, 51);
      height: 100vh;
      width: 100%;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 99999;
    }
    .video__popup-close{
      position: absolute;
      top: 20px;
      right: 20px;
    }
    .video__popup-wrapper{
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
    }
    .video__popup-wrapper video{
      width: 100%;
      height: auto;
      max-height: 400px;
      max-width: 700px;
      border-radius: 4px;
    }
    @media(max-width:749px){
      #product-img-slider1 {
        display: none;
      }
      #product-img-slider2 .slick-track {
        margin-left: 0;
        margin-right: 0;
      }
  
      #product-img-slider2 .pdp-image-slide{
        margin: 0;
        border: none;
        border-radius: 4px;
      }
      #product-img-slider2 .slick-slide.slick-current {
        border: none;
        filter: none;
      }
      #product-img-slider2.slick-slider .slick-dots{
        position: relative;
        bottom: 0;
      }
      #product-img-slider2.slick-slider .slick-dots li.slick-active button:before{
        background-color: #00BAC6 !important;
      }
      #product-img-slider2.slick-slider .slick-dots li a:before, .slick-slider .slick-dots li button:before{
        background-color: #C4C4C4;
      }
    }
  </style>
  
  
