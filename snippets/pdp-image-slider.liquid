  <script type="text/javascript">
      function stickySiderbar() {
        setTimeout(function() {
          $( window ).width() > 749 && $(".pdp-sticky__wrapper").stickySidebar({
              topSpacing: 90,
              bottomSpacing: 30,
              minWidth: 749,
              containerSelector: ".poduct__page-container",
              innerWrapperSelector: ".pdp-sticky__inner",
          })
        }, 10);
      }
      $(document).ready(function(){
        $("#product-img-slider1").on('afterChange', function(event, slick, currentSlide){
          $("#videoPopup").trigger('pause');     
        });
        $('#product-img-slider1').slick({
          dots: false,
          infinite: true,
          speed: 300,
          arrows: true,
          lazyLoad: 'ondemand',
          slidesToShow: 1,
          adaptiveHeight: true,
          prevArrow:'<div class="slick-prev"><i class="arrow left"></i></div>',
          nextArrow:'<div class="slick-next"><i class="arrow right"></i></div>',
          asNavFor: '#product-img-slider2'
        });
    
        $('#product-img-slider2').slick({
          dots: false,
          infinite: true,
          speed: 300,
          arrows: false,
          slidesToShow: 6,
          slidesToScroll: 1,
          adaptiveHeight: false,
          focusOnSelect: true,
          asNavFor: '#product-img-slider1',
          responsive: [
            {
              breakpoint: 749,
              settings: {
                arrows: false,
                slidesToShow: 1,
                dots: false,
              }
            }
          ]
        });
  
        $(document).on("click",".video-placeholder",function(){
          if(window.innerWidth <750){
            $(".pdp-video__popup-container").show();
            $("body").css({"overflow":"hidden"}); 
            $("#pdpVideo").trigger('play');
          }
        })
        $(document).on("click",".video__popup-close",function(){
          $(".pdp-video__popup-container").hide();
          $("body").css({"overflow":"auto"}); 
          $("#pdpVideo").trigger('pause');
        });
        stickySiderbar();
      });
  </script>  
  
    
    
    
    
    