<style>
  .nav__mobile--show {
    display: none;
  }

  .cart__header {
    display: flex;
    justify-content: space-between;
    padding: 13px 19px;
    position: fixed;
    top: 0;
    width: 100%;
    background: white;
    z-index: 999;
    border: 1px solid #D8D8D8;
  }

  .cart__heading {
    font-family: Poppins;
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 24px;
    color: #333;
  }
  .white-popup  {
    position: relative;
    background: #FFF;
    padding: 20px;
    border-radius:5px;
    width:94%;
    max-width: 500px;
    margin: 20px auto;
  }
  @media(max-width:749px) {
    .nav__mobile--show {
      display: block;
    }

    .nav_desktop--show {
      display: none;
    }
  }
</style>

{% if template contains 'cart' or template.suffix contains 'freePrd' or template.suffix contains 'ar-filter' or template.suffix contains 'retailer-dashboard' or template.suffix contains 'order-reports' or template.suffix contains 'order-details' or template.suffix contains 'orders' or template.name contains 'order' or template.suffix contains 'tax-statement' or template.suffix contains 'tax-request' or template.suffix contains 'transactions' or template.suffix contains 'customer' %}

<div class="nav__mobile--show">
  <div class="cart__header">
    <div class="cart__header-icon">
      <button onclick="history.back()" style="border:none;background:white;outline:none;">
        <img src="https://cdn.shopify.com/s/files/1/0291/0417/7212/files/Vector_d5278b25-dd24-415c-a4a0-e7054ded05cd.png?v=1617650787">
      </button>
    </div>
    <div class="cart-head">
      {% if template.suffix == 'orders' or template.name == 'order'%}
      <span class="cart__heading">My Orders</span>
      {% elsif template.suffix contains 'freePrd'%}
      <span class="cart__heading">Free Products</span>
      {% elsif template.suffix contains 'ar-filter'%}
      <span class="cart__heading">AR Filter</span>
      {% elsif template.suffix contains 'retailer-dashboard'%}
      <span class="cart__heading">Retailer Dashboard</span>
      {% elsif template.suffix contains 'order-details'%}
      <span class="cart__heading">My Orders</span>
      {% elsif template.suffix contains 'order-reports'%}
      <span class="cart__heading">My Order Reports</span>
      {% elsif template.suffix contains 'tax-statement' or template.suffix contains 'tax-request' %}
      <span class="cart__heading">Tax Statement</span>
      {% elsif template.suffix contains 'transactions' %}
      <span class="cart__heading">My Transactions</span>
      {% elsif template.suffix == 'customer-orders' or template.suffix == 'customer-order-details'%}
      <span class="cart__heading">Customer Orders</span>
      {% elsif template.suffix == 'customer-details' or template.suffix == 'customer-products'%}
      <span class="cart__heading">Place A New Order</span>
      {% elsif template contains 'cart' %}
      <span class="cart__heading">Your Cart</span>
      {% endif %}
    </div>

